---
import { inject } from '@vercel/analytics'

import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Head from '../components/Head.tsx'
import SideBar from '../components/SideBar.astro'
import '../styles/reset.css'

inject()

type Props = {
  pageTitle?: string
  pageDescription?: string
  pageUrl: string
  pageType?: string
}
const { pageTitle, pageDescription, pageUrl, pageType } = Astro.props
---

<!-- TODO: pageUrl設定 -->
<Head
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageUrl="/"
  pageType={pageType}
/>
<body>
  <div class="baseLayout">
    <Header />
    <div class="baseLayout__inner">
      <main class="baseLayout__main">
        <slot />
      </main>
      <SideBar />
    </div>
    <Footer />
  </div>
</body>

<style lang="scss">
  @use '../styles/mixin' as mixin;
  @use '../styles/variables' as vars;
  .baseLayout {
    background: vars.$black-900;
    width: 100%;
    // min-height: 100vh;
    @include mixin.dark() {
      background: vars.$black-200;
      color: #fff;
    }

    &__inner {
      display: flex;
      gap: 40px;
      max-width: vars.$contentMaxWidth;
      margin: 0 auto;

      min-height: calc(100vh - #{vars.$headerHeight} - #{vars.$footerHeight});
      @include mixin.mq(sp) {
        flex-direction: column;
        gap: 0;
      }
    }

    &__main {
      padding: 40px 16px 80px;
      width: 100%;
    }
  }
</style>
