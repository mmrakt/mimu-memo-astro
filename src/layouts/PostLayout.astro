---
import dayjs from 'dayjs'
import React from 'react'

import ChevronLeft from '../components/common/ChevronLeft'
import ChevronRight from '../components/common/ChevronRight'
import useStringTrim from '../hooks/useStringTrim'

import type { PaginatedPost } from '../types'
import type { AstroComponentFactory } from 'astro/dist/runtime/server'
import SocialButtons from '../components/SocialButtons.astro'

type Props = {
  post: PaginatedPost
}
const { post } = Astro.props
---

<div class="postLayout">
  <div class="postLayout__socialButton">
    <SocialButtons title={post.entry.data.title} slug={post.entry.slug} />
  </div>
  <div class="postLayout__inner">
    <section
      class="postLayout__section box-outline pc:p-10 p-5 w-full dark:bg-dark-gray bg-white animate-slide-in"
    >
      <p class="text-sm">
        {dayjs(post.entry.data.pubDate).format('YYYY-MM-DD')}
      </p>
      <h1 class="postLayout__title mt-5 text-3xl font-black">
        {post.entry.data.title}
      </h1>
      <div class="postLayout__content mt-16">
        <slot />
      </div>
    </section>
    <div class="postLayout__pagination flex items-center mt-10">
      <div class="postLayout__prev w-1/2">
        {
          post.prev.url && (
            <a
              href={`/${post.prev.url}`}
              class="postLayout__prevLink flex items-center"
            >
              <div class="postLayout__prevText text-link flex items-center underline">
                <ChevronLeft />
                {useStringTrim(post.prev.title, 50)}
              </div>
            </a>
          )
        }
      </div>
      <div class="postLayout__next w-1/2">
        {
          post.next.url && (
            <a
              href={`/${post.next.url}`}
              class="postLayout__nextLink flex items-center float-right"
            >
              <div class="postLayout__nextText text-link flex items-center underline">
                {useStringTrim(post.next.title, 50)}
                <ChevronRight />
              </div>
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @use '../styles/mixin' as mixin;
  @use '../styles/variables' as vars;
  .postLayout {
    display: flex;
    width: 100%;
    gap: 40px;
    position: relative;
    padding-top: 40px;

    &__inner {
      width: 100%;
    }

    &__socialButton {
      position: sticky;
      top: 100px;
      margin-left: -80px;
      height: 100vh;
    }
    &__section {
      // max-width: 680px;
      border-radius: 5px;
      border: 1px solid vars.$black-800;
      background: #fff;

      @include mixin.slideIn();
    }
  }
</style>
