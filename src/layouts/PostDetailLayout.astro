---
import dayjs from 'dayjs'
import React from 'react'

import ChevronLeft from '../components/common/ChevronLeft'
import ChevronRight from '../components/common/ChevronRight'
import useStringTrim from '../hooks/useStringTrim'

import type { PaginatedPost } from '../types'
import type { AstroComponentFactory } from 'astro/dist/runtime/server'
import SocialButtons from '../components/SocialButtons.astro'
import PostDetail from '../components/PostDetail.astro'

type Props = {
  post: PaginatedPost
}
const { post } = Astro.props
---

<div class="postDetailLayout">
  <div class="postDetailLayout__socialButton">
    <SocialButtons title={post.entry.data.title} slug={post.entry.slug} />
  </div>
  <div class="postDetailLayout__inner">
    <PostDetail post={post}>
      <slot />
    </PostDetail>
    <div class="postDetailLayout__pagination flex items-center mt-10">
      <div class="postDetailLayout__prev w-1/2">
        {
          post.prev.url && (
            <a
              href={`/${post.prev.url}`}
              class="postDetailLayout__prevLink flex items-center"
            >
              <div class="postDetailLayout__prevText text-link flex items-center underline">
                <ChevronLeft />
                {useStringTrim(post.prev.title, 50)}
              </div>
            </a>
          )
        }
      </div>
      <div class="postDetailLayout__next w-1/2">
        {
          post.next.url && (
            <a
              href={`/${post.next.url}`}
              class="postDetailLayout__nextLink flex items-center float-right"
            >
              <div class="postDetailLayout__nextText text-link flex items-center underline">
                {useStringTrim(post.next.title, 50)}
                <ChevronRight />
              </div>
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @use '../styles/mixin' as mixin;
  @use '../styles/variables' as vars;
  .postDetailLayout {
    display: flex;
    width: 100%;
    gap: 40px;
    position: relative;
    padding-top: 40px;

    &__inner {
      width: 100%;
    }

    &__socialButton {
      position: sticky;
      top: 100px;
      margin-left: -80px;
      height: 100vh;
    }
  }
</style>
