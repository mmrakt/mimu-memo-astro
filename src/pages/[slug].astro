import { CollectionEntry, getCollection, getEntry } from 'astro:content'
import type { Frontmatter, PaginatedPost } from '../types'
import { extractSlugFromMd } from '../utils'
import BaseLayout from '../components/layouts/BaseLayout.astro'
import Container from '../features/postDetail/Container.astro'
import Head from '../components/layouts/Head'
import { remark } from 'remark'
import strip from 'strip-markdown'

export async function getStaticPaths() {
  const collection = await getCollection('owned')
  const sorted = collection.sort(
    (a, b) =>
      new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  )

  let paths = []
  for (let i = 0; i < sorted.length; i++) {
    let nextUrl = '',
      nextTitle = '',
      prevUrl = '',
      prevTitle = ''

    if (i !== sorted.length - 1) {
      nextUrl = sorted[i + 1].slug
      nextTitle = sorted[i + 1].data.title
    }
    if (i !== 0) {
      prevUrl = sorted[i - 1].slug
      prevTitle = sorted[i - 1].data.title
    }

    paths.push({
      params: {
        slug: sorted[i].slug,
      },
      props: {
        entry: sorted[i],
        next: {
          url: nextUrl,
          title: nextTitle,
        },
        prev: {
          url: prevUrl,
          title: prevTitle,
        },
      },
    })
  }
  return paths
}
type Props = PaginatedPost

