---
import ChevronLeft from '../../components/elements/ChevronLeft'
import ChevronRight from '../../components/elements/ChevronRight'

import type { Page } from 'astro'

type Props = {
  page: Pick<
    Page,
    'start' | 'end' | 'size' | 'total' | 'currentPage' | 'lastPage' | 'url'
  >
}
const {
  page: { start, end, size, total, currentPage, lastPage, url },
} = Astro.props
---

<div class="postListPagination flex py-3">
  {
    currentPage !== 1 && (
      <a
        href={url.prev}
        rel="prev"
        class="postListPagination__link postListPagination__link--prev"
      >
        Prev
      </a>
    )
  }
  {
    currentPage !== lastPage && (
      <a
        href={url.next}
        rel="next"
        class="postListPagination__link postListPagination__link--next"
      >
        Next
      </a>
    )
  }
</div>

<style lang="scss">
  @use '../../styles/utils' as utils;
  @use '../../styles/variables' as vars;

  .postListPagination {
    display: flex;
    margin-top: 40px;

    &__link {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 8px 12px;
      font-weight: bold;
      position: relative;

      @extend %link;
      @extend %card-content;

      &::before,
      &::after {
        @extend %arrow;
      }
      &--prev {
        padding-left: 30px;
        &::before {
          @extend %arrow-prev;
          left: 10px;
        }
      }

      &--next {
        padding-right: 30px;
        margin-left: auto;

        &::after {
          @extend %arrow-next;
          right: 10px;
        }
      }
    }
  }
</style>
