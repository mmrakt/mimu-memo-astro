---
import { SITE_INTRO } from '../../config'
---

<header class="header">
  <div class="header__inner">
    <a href="/page/1" class="header__link">
      <img
        class="hader__logo"
        width="190"
        height="30"
        src="/img/mimu-memo.svg"
        alt="mimu-memo"
      />
    </a>
    <p class="header__text">{SITE_INTRO}</p>
  </div>
</header>

<style lang="scss">
  @use '../../styles/utils' as utils;
  @use '../../styles/variables' as vars;

  .header {
    background: vars.$primary;
    color: #fff;

    @include utils.dark() {
      background: vars.$black-200;
    }
    &__title {
      color: vars.$text-color-white;
    }

    &__inner {
      display: flex;
      flex-direction: column;
      gap: 8px;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    &__text {
      font-weight: 500;
    }
  }
</style>
