---
import { SITE_INTRO } from '../../config'
import SiteLogo from '../elements/SiteLogo.astro'
---

<header class="header">
  <div class="header__inner">
    <a href="/page/1" class="header__link">
      <SiteLogo />
    </a>
    <p class="header__text">{SITE_INTRO}</p>
  </div>
</header>

<style lang="scss">
  @use '../../styles/utils' as utils;
  @use '../../styles/variables' as vars;

  .header {
    background: vars.$primary;
    color: #fff;

    @include utils.dark() {
      background: vars.$black-200;
    }
    &__title {
      color: vars.$text-color-white;
    }

    &__inner {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px 0 35px;
    }
    &__text {
      font-weight: 500;
    }
  }
</style>
