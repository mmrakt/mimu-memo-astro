---
import React from 'react'

import { QIITA_API_ENDPOINT, ZENN_FEED_URL } from '../../config'
import { convertMediaNameToSlug, fetchFeed, fetchPosts } from '../../utils'
import type { MediaDisplay } from '../../types'
import { getCollection } from 'astro:content'
import LoadingSpinner from '../elements/LoadingSpinner.astro'

type Props = {
  media: MediaDisplay
}
const { media } = Astro.props

let postCount
if (media === 'mimu-memo') {
  const ownedMd = await getCollection('owned')
  postCount = ownedMd.length
} else if (media === 'Qiita') {
  const token = import.meta.env.QIITA_TOKEN || ''
  if (token) {
    const posts = await fetchPosts(QIITA_API_ENDPOINT, token)
    postCount = posts.length
  }
} else if (media === 'Zenn') {
  const zennFeed = await fetchFeed(ZENN_FEED_URL)
  postCount = zennFeed.items.length
}
---

<>
  {
    !postCount ? (
      <LoadingSpinner />
    ) : (
      <a
        href={`/${convertMediaNameToSlug(media)}/page/1`}
        class="mediaItem__link"
      >
        <span class="mediaItem__text">
          {media}({postCount})
        </span>
      </a>
    )
  }
</>

<style lang="scss">
  @use '../../styles/utils' as utils;
  @use '../../styles/variables' as vars;

  .mediaItem {
    &__link {
      display: block;
      width: fit-content;
      padding: 4px;
    }
    &__text {
      margin-top: 4px;
      font-size: 14px;
      font-weight: 500;

      @extend %link;
    }
  }
</style>
